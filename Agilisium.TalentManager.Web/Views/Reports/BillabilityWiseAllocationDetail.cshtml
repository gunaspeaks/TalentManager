@model IEnumerable<Agilisium.TalentManager.Web.Models.BillabilityWiseAllocationDetailModel>

@{
    ViewBag.Title = "Billability-Wise Allocation Details";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Billability-Wise Allocation Details</h3>
    </div>
    <div class="panel-body">
        <table style="width:90%" class="table">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProjectType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllocationType)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.AllocationStartDate)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.AllocationEndDate)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeName)
                        </td>
                        <td>
                            @Html.ActionLink(item.ProjectName, "Edit", "Project", new { id = item.ProjectID }, null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AllocationType)
                        </td>
                        <td class="text-right">
                            <text>@item.AllocationStartDate.ToString("dd/MMM/yyyy")</text>
                        </td>
                        <td class="text-right">
                            <text>@item.AllocationEndDate.ToString("dd/MMM/yyyy")</text>
                        </td>
                    </tr>
                }

            </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back to Summary", "BillabilityWiseAllocationSummary", null, new { @class = "btn btn-default" })
    </div>
</div>
