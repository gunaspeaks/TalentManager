@model IEnumerable<Agilisium.TalentManager.Web.Models.VendorSpecializedPartnerModel>

<div class="dashboardItem">
    <div class="dashboardItemHeader">Our Vendors Summary</div>
    <div class="dashboardItemBody">
        <table class="tbl">
            <tr>
                <th>@Html.DisplayNameFor(model => model.SpecializedPartner)</th>
                <th class="text-right">@Html.DisplayNameFor(model => model.VendorsCount)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.SpecializedPartner)
                    </td>
                    <td class="text-right">@Html.DisplayFor(model => item.VendorsCount)</td>
                </tr>
            }
            <tr>
                <td>
                    Total
                </td>
                <td class="text-right">@Model.Sum(v => v.VendorsCount)</td>
            </tr>
        </table>
        <div>
            @Html.ActionLink("View All", "List")
            <div class="pull-right">
                @Html.ActionLink("+Add New Vendor", "Create")
            </div>
        </div>
    </div>
</div>